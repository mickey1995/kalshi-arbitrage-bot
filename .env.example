# Kalshi Arbitrage Bot Configuration
# Copy this file to .env and fill in your values

# Environment: "demo" for testing, "production" for live trading
ENVIRONMENT=demo

# Kalshi API Credentials
# Get your API key from: https://kalshi.com/account/api-keys
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=kalshi_private_key.pem

# =============================================================================
# LEARNING MODE SETTINGS (for hundreds of small bets)
# =============================================================================
# Set these low to make many small trades and learn market behavior

# Trading Parameters
MIN_PROFIT_THRESHOLD=0.01          # Minimum profit in dollars ($0.01 = 1 cent)
ALPHA_EXTRACTION=0.9               # Stop when capturing 90% of available arbitrage
MAX_POSITION_SIZE_FRACTION=0.1     # Max 10% of order book depth (smaller positions)
MAX_DRAWDOWN_PERCENT=20.0          # Halt if 20% drawdown (more tolerance for learning)

# Learning mode: Small fixed bet sizes
LEARNING_MODE=true
LEARNING_BET_SIZE=1.00             # $1 per trade for learning
MAX_DAILY_TRADES=500               # Up to 500 trades per day

# Frank-Wolfe Optimization Parameters
FW_INITIAL_EPSILON=0.1             # Initial contraction for Barrier FW
FW_CONVERGENCE_THRESHOLD=0.000001  # Convergence threshold
FW_MAX_ITERATIONS=150              # Max iterations per optimization
FW_TIME_LIMIT_SECONDS=1800         # 30 minute time limit

# Integer Programming
IP_SOLVER=ortools                  # "ortools" (free) or "gurobi" (commercial)
IP_TIME_LIMIT_SECONDS=30           # Per-solve time limit

# Rate Limiting
API_REQUESTS_PER_MINUTE=100

# Database
DATABASE_URL=sqlite+aiosqlite:///kalshi_arbitrage.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage_bot.log

# Optional: LLM for Dependency Detection
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
